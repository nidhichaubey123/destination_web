@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@model List<DMCPortal.Web.Models.Agent>
@{
    ViewBag.Title = "Agent Master";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />


<a href="@Url.Action("Index", "Master")" class="btn btn-primary" style="border-radius: 8px; padding: 8px 16px;">
    <i class="fas fa-arrow-left" style="margin-right: 6px;"></i> Back
</a>

<br />
<br />

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-4">
        <h3>Agent Master</h3>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addModal">
            <i class="bi bi-plus-circle"></i> Add Agent
        </button>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <table class="table table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>POC</th>
                <th>Company</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Zone</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var agent in Model)
            {
                <tr>
                    <td>@agent.AgentName</td>
                    <td>@agent.AgentPoc1</td>
                    <td>@agent.Agency_Company</td>
                    <td>@agent.phoneno</td>
                    <td>@agent.emailAddress</td>
                    <td>@agent.Zone</td>
                    <td>@agent.AgentAddress</td>
                    <td>
                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editModal"
                                data-id="@agent.AgentId"
                                data-name="@agent.AgentName"
                                data-poc="@agent.AgentPoc1"
                                data-company="@agent.Agency_Company"
                                data-phone="@agent.phoneno"
                                data-email="@agent.emailAddress"
                                data-zone="@agent.Zone"
                                data-address="@agent.AgentAddress">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                data-id="@agent.AgentId"
                                data-name="@agent.AgentName">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Add Modal -->
<div class="modal fade" id="addModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content" >
            @using (Html.BeginForm("Create", "Agent", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header" style="background-color:#0d6efd;">
                    <h5>Add Agent</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body row g-3">
                    <div class="col-md-6">
                        <label>Name</label>
                        <input name="AgentName" class="form-control" required />
                        <div class="invalid-feedback">Name is required.</div>
                    </div>
                    <div class="col-md-6">
                        <label>POC</label>
                        <input name="AgentPoc1" class="form-control" required />
                        <div class="invalid-feedback">POC is required.</div>
                    </div>
                    <div class="col-md-6">
                        <label>Company</label>
                        <input name="Agency_Company" class="form-control" required />
                        <div class="invalid-feedback">Company name is required.</div>
                    </div>
                    <div class="col-md-6">
                        <label>Phone</label>
                        <input name="phoneno" class="form-control" pattern="[0-9]{10}" required title="Enter 10-digit number" />
                        <div class="invalid-feedback">Enter a valid 10-digit phone number.</div>
                    </div>
                    <div class="col-md-6">
                        <label>Email</label>
                        <input name="emailAddress" type="email" class="form-control" required />
                        <div class="invalid-feedback">Enter a valid email address.</div>
                    </div>
                    <div class="col-md-6">
                        <label>Zone</label>
                        <select name="Zone" class="form-select" id="addZone" required>
                            <option value="">-- Select Zone --</option>
                            @foreach (var zone in ViewBag.ZoneList as List<SelectListItem>)
                            {
                                <option value="@zone.Value">@zone.Text</option>
                            }
                        </select>
                        <div class="invalid-feedback">Zone is required.</div>
          
                    </div>
                    <div class="col-12">
                        <label>Address</label>
                        <input name="AgentAddress" class="form-control" required />
                        <div class="invalid-feedback">Address is required.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-xl" >
        <div class="modal-content" >
            @using (Html.BeginForm("Edit", "Agent", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate", id = "editForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header" style="background-color:#0d6efd;">
                    <h5>Edit Agent</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body row g-3">
                    <input type="hidden" name="AgentId" id="editAgentId" />
                    <div class="col-md-6">
                        <label>Name</label>
                        <input name="AgentName" class="form-control" id="editAgentName" required />
                        <div class="invalid-feedback">Name is required.</div>
                    </div>
                    <div class="col-md-6">
                        <label>POC</label>
                        <input name="AgentPoc1" class="form-control" id="editAgentPoc1" required />
                        <div class="invalid-feedback">POC is required.</div>
                    </div>
                    <div class="col-md-6">
                        <label>Company</label>
                        <input name="Agency_Company" class="form-control" id="editAgencyCompany" required />
                        <div class="invalid-feedback">Company is required.</div>
                    </div>
                    <input type="hidden" asp-for="AppSheetId" /> 
                    <div class="col-md-6">
                        <label>Phone</label>
                        <input name="phoneno" class="form-control" id="editPhone" required pattern="[0-9]{10}" title="Enter 10-digit number" />
                        <div class="invalid-feedback">Enter a valid 10-digit phone number.</div>
                    </div>
                    <div class="col-md-6">
                        <label>Email</label>
                        <input name="emailAddress" class="form-control" id="editEmail" type="email" required />
                        <div class="invalid-feedback">Enter a valid email address.</div>
                    </div>
                    <div class="col-md-6">
                        <label>Zone</label>
                        <select name="Zone" class="form-select" id="editZone" required>
                            <option value="">-- Select Zone --</option>
                            @foreach (var zone in ViewBag.ZoneList as List<SelectListItem>)
                            {
                                <option value="@zone.Value">@zone.Text</option>
                            }
                        </select>
                        <div class="invalid-feedback">Zone is required.</div>
                      
                    </div>
                    <div class="col-12">
                        <label>Address</label>
                        <input name="AgentAddress" class="form-control" id="editAddress" required />
                        <div class="invalid-feedback">Address is required.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("DeleteConfirmed", "Agent", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5>Delete Agent</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="deleteAgentId" />
                    Are you sure you want to delete <b id="deleteAgentName"></b>?
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- JavaScript Section -->
<script>
    (() => {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();

    document.addEventListener("DOMContentLoaded", function () {
        const editModal = document.getElementById("editModal");
        if (editModal) {
            editModal.addEventListener("show.bs.modal", function (e) {
                const btn = e.relatedTarget;
                document.getElementById("editAgentId").value = btn.getAttribute("data-id");
                document.getElementById("editAgentName").value = btn.getAttribute("data-name");
                document.getElementById("editAgentPoc1").value = btn.getAttribute("data-poc");
                document.getElementById("editAgencyCompany").value = btn.getAttribute("data-company");
                document.getElementById("editPhone").value = btn.getAttribute("data-phone");
                document.getElementById("editEmail").value = btn.getAttribute("data-email");
                document.getElementById("editZone").value = btn.getAttribute("data-zone");
                document.getElementById("editAddress").value = btn.getAttribute("data-address");
            });
        }

        const deleteModal = document.getElementById("deleteModal");
        if (deleteModal) {
            deleteModal.addEventListener("show.bs.modal", function (e) {
                const btn = e.relatedTarget;
                document.getElementById("deleteAgentId").value = btn.getAttribute("data-id");
                document.getElementById("deleteAgentName").textContent = btn.getAttribute("data-name");
            });
        }
    });
</script>
