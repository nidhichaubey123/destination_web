@{
    var isModal = Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest"
               || Context.Request.Query["modal"] == "true";

    // Instead of "~/Views/Shared/_Layout.cshtml", point at your real file:
    Layout = isModal
        ? null
        : "~/Pages/Shared/_Layout.cshtml";
}


@model DMCPortal.Web.Models.RegisterRequest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "User Registration";
}




<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card border-0 shadow-lg rounded-4 bg-white">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4 text-primary fw-bold">
                        <i class="bi bi-person-plus-fill me-2"></i>User Registration
                    </h2>

                    <!-- ✅ Show API errors -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger border border-danger-subtle rounded-3 shadow-sm">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div><i class="bi bi-exclamation-circle-fill text-danger me-1"></i> @error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form id="modalRegisterForm" asp-action="Index" asp-controller="Register" method="post" novalidate>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="EmailAddress" class="form-label fw-semibold text-primary"></label>
                                <input asp-for="EmailAddress" class="form-control form-control-lg border-primary-subtle shadow-sm" />
                                <span asp-validation-for="EmailAddress" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label fw-semibold text-primary"></label>
                                <input asp-for="Password" type="password" class="form-control form-control-lg border-primary-subtle shadow-sm" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-semibold text-primary"></label>
                                <input asp-for="FirstName" class="form-control form-control-lg border-primary-subtle shadow-sm" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="MiddleName" class="form-label fw-semibold text-primary"></label>
                                <input asp-for="MiddleName" class="form-control form-control-lg border-primary-subtle shadow-sm" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-semibold text-primary"></label>
                                <input asp-for="LastName" class="form-control form-control-lg border-primary-subtle shadow-sm" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="MobileNo" class="form-label fw-semibold text-primary"></label>
                                <input asp-for="MobileNo" class="form-control form-control-lg border-primary-subtle shadow-sm" />
                                <span asp-validation-for="MobileNo" class="text-danger small"></span>
                            </div>

                            <div class="col-12 text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm rounded-pill">
                                    <i class="bi bi-check-circle-fill me-2"></i>Register
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons if not already included -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">




