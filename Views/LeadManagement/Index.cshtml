<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>DMC Portal - Lead Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @if (TempData["Success"] != null)
    {
        <div id="leadSuccessToast" class="position-fixed top-0 end-0 m-3 alert alert-success shadow-sm" style="z-index: 1055; min-width: 250px;">
            @TempData["Success"]
        </div>

        <script>
            setTimeout(() => {
                const toast = document.getElementById('leadSuccessToast');
                if (toast) toast.remove();
            }, 3000); // 3 seconds
        </script>
    }



    <style>
        body {
            background-color: #f8f9fa;
        }

        .alert-success {
            border: none;
            background-color: #d1e7dd;
            color: #0f5132;
            font-size: 14px;
        }

        .top-header {
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
            padding: 12px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-left h5 {
            margin: 0;
            color: #0d6efd;
        }

        .header-left p {
            margin: 0;
            font-size: 14px;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .notification-icon {
            position: relative;
            color: #6c757d;
            font-size: 18px;
            cursor: pointer;
            padding: 8px;
        }

            .notification-icon:hover {
                color: #0d6efd;
            }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            background-color: #0d6efd;
            color: #fff;
            font-weight: bold;
            font-size: 14px;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
        }

        .user-name {
            font-weight: 600;
            color: #000;
        }


        .card-box {
            border: 1px solid #dee2e6;
            border-radius: 0.75rem;
            padding: 1.5rem;
            background-color: #fff;
        }

        .lead-type {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            font-size: 1.25rem;
        }

        .lead-type-icon {
            font-size: 1.25rem;
        }

        .badge-lead {
            padding: 0.25rem 0.75rem;
            border-radius: 999px;
            font-size: 0.875rem;
        }

        .lead-contact {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            gap: 0.5rem;
        }

        .sidebar {
            width: 250px;
            background-color: #ffffff;
            border-right: 1px solid #dee2e6;
            padding: 20px;
        }

            .sidebar a {
                display: block;
                padding: 12px 10px;
                margin-bottom: 8px;
                color: #000;
                text-decoration: none;
                border-radius: 8px;
            }

                .sidebar a.active, .sidebar a:hover {
                    background-color: #e9ecef;
                    font-weight: bold;
                }

        .content-area {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
        }

        .main-container {
            display: flex;
            height: calc(100vh - 60px);
        }
    </style>
</head>
<body>

    <!-- Top Header -->
    <div class="top-header">
        <div class="header-left">
            <h5><b>DMC Portal</b></h5>
            <p class="text-muted">Travel Management System</p>
        </div>
        <div class="header-right">
            <div class="notification-icon">
                <i class="fas fa-bell"></i>
                <span class="text-muted ms-1">Notifications</span>
            </div>
            <div class="user-info">
                <div class="user-avatar">JD</div>
                <span class="user-name">John Doe</span>
            </div>
        </div>
    </div>
    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <a href="@Url.Action("Index", "Dashboard")" class="list-group-item list-group-item-action">
                📊 Dashboard
            </a>


            <a href="/Trip/Index" class="list-group-item list-group-item-action">✈️ Trip Management</a>

            <a href="@Url.Action("Index", "LeadManagement")" class="list-group-item list-group-item-action">
                👥 Lead Management
            </a>

            <a href="@Url.Action("Index", "UserManagement")" class="list-group-item list-group-item-action">
                👤 User Management
            </a>

            <a href="@Url.Action("Index", "Role")" class="list-group-item list-group-item-action">
                👤 Role Management
            </a>

            <a href="@Url.Action("Index", "Operation")" class="list-group-item list-group-item-action">
                👤 Operation Management
            </a>
        </div>

        <div class="content-area">
            
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold">Lead Management</h4>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addLeadModal">
                    + Add New Lead
                </button>



        </div>

        <div class="d-flex gap-3 mb-4">
            <input type="text" class="form-control w-25" placeholder="Search leads...">
            <button class="btn btn-outline-secondary">Filter by Status</button>
            <button class="btn btn-outline-secondary">Export Leads</button>
        </div>

        <div class="d-flex gap-3 mb-4">
            <div class="card-box w-25">
                <div class="lead-type text-danger"><span class="lead-type-icon">🔥</span> Hot Leads</div>
                <h5 class="mt-2">5</h5>
            </div>
            <div class="card-box w-25">
                <div class="lead-type text-warning"><span class="lead-type-icon">🔶</span> Warm Leads</div>
                <h5 class="mt-2">12</h5>
            </div>
            <div class="card-box w-25">
                <div class="lead-type text-primary"><span class="lead-type-icon">❄️</span> Cold Leads</div>
                <h5 class="mt-2">8</h5>
            </div>
        </div>

        <div class="card-box">
            <h5 class="fw-semibold mb-3">Recent Leads</h5>

            <div class="mb-3 p-3 rounded bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">Sarah Johnson</div>
                        <div class="text-muted small">sarah.j@email.com • +1 234-567-8901</div>
                    </div>
                    <div class="text-end">
                        <div>Destination: <strong>Bali</strong></div>
                        <div>PAX: 4</div>
                        <div>Budget: <span class="text-success fw-bold">$8,000</span></div>
                    </div>
                    <div class="lead-contact">
                        <span class="badge-lead border border-danger text-danger">Hot</span>
                        <button class="btn btn-outline-dark btn-sm">Contact</button>
                        <button class="btn btn-primary btn-sm">Convert</button>
                    </div>
                </div>
            </div>

            <div class="mb-3 p-3 rounded bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">Michael Chen</div>
                        <div class="text-muted small">m.chen@email.com • +1 234-567-8902</div>
                    </div>
                    <div class="text-end">
                        <div>Destination: <strong>Thailand</strong></div>
                        <div>PAX: 8</div>
                        <div>Budget: <span class="text-success fw-bold">$15,000</span></div>
                    </div>
                    <div class="lead-contact">
                        <span class="badge-lead border border-warning text-warning">Warm</span>
                        <button class="btn btn-outline-dark btn-sm">Contact</button>
                        <button class="btn btn-primary btn-sm">Convert</button>
                    </div>
                </div>
            </div>

            <div class="mb-3 p-3 rounded bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">Emily Davis</div>
                        <div class="text-muted small">emily.d@email.com • +1 234-567-8903</div>
                    </div>
                    <div class="text-end">
                        <div>Destination: <strong>Singapore</strong></div>
                        <div>PAX: 2</div>
                        <div>Budget: <span class="text-success fw-bold">$4,500</span></div>
                    </div>
                    <div class="lead-contact">
                        <span class="badge-lead border border-primary text-primary">Cold</span>
                        <button class="btn btn-outline-dark btn-sm">Contact</button>
                        <button class="btn btn-primary btn-sm">Convert</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>
    <!-- Add New Lead Modal -->
 
    <div class="modal fade" id="addLeadModal" tabindex="-1" aria-labelledby="addLeadModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xxl modal-dialog-scrollable">
            <div class="modal-content" style="max-height: 90vh; overflow-y: auto;">

                <form action="/LeadManagement/Create" method="post" class="needs-validation" >
                    <div class="modal-header">
                        <h5 class="modal-title">Add New Lead</h5>
                       
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body row g-3 px-4">
                        <div class="col-md-6">
                            <label class="form-label">Name</label>
                            <input name="Name" type="text" class="form-control" required />
                            <div class="invalid-feedback">Name is required.</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input name="Email" type="email" class="form-control" required />
                            <div class="invalid-feedback">Enter a valid email.</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input name="Phone" type="tel" pattern="[0-9]{10}" maxlength="10" class="form-control" required />
                            <div class="invalid-feedback">Enter a 10-digit phone number.</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Date</label>
                            <input name="QueryDate" type="date" class="form-control" required />
                            <div class="invalid-feedback">Date is required.</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Zone</label>
                            <input name="Zone" type="text" class="form-control" required />
                            <div class="invalid-feedback">Zone is required.</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">GIT / FIT</label>
                            <select name="GitFit" class="form-select">
                                <option value="">Select GIT or FIT</option>
                                <option>GIT</option>
                                <option>FIT</option>
                            </select>
                            <div class="invalid-feedback">Select GIT or FIT.</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Destination</label>
                            <input name="Destination" type="text" class="form-control" required />
                            <div class="invalid-feedback">Destination is required.</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Conversion Probability</label>
                            <input name="ConversionProbability" type="number" min="0" max="100" class="form-control"  />
                            <div class="invalid-feedback">Enter valid %.</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Number of Passengers</label>
                            <input name="PaxCount" type="number" min="1" class="form-control" required />
                            <div class="invalid-feedback">Enter number of passengers.</div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Travel Plan</label>
                            <select name="TravelPlan" class="form-select" >
                                <option value="">Select travel plan</option>
                                <option>Standard</option>
                                <option>Premium</option>
                            </select>
                       
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Start Date</label>
                            <input name="StartDate" type="date" class="form-control"  />

                        </div>

                        <div class="col-md-6">
                            <label class="form-label">End Date</label>
                            <input name="EndDate" type="date" class="form-control"  />
                 
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Budget</label>
                            <input name="Budget" type="number" min="1" class="form-control" required />
              
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Status</label>
                            <select name="Status" class="form-select" >
                                <option value="">Select status</option>
                                <option>Hot</option>
                                <option>Warm</option>
                                <option>Cold</option>
                            </select>
             
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Source</label>
                            <select name="Source" class="form-select" >
                                <option value="">Select source</option>
                                <option>Website</option>
                                <option>Referral</option>
                                <option>Agent</option>
                            </select>
                    
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Query Code</label>
                            <input name="QueryCode" type="text" class="form-control" />
                        </div>

                        <div class="col-12">
                            <label class="form-label">Notes</label>
                            <textarea name="Notes" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer px-4">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Create Lead</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

  



</body>
</html>
