        .user-details {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .user-name-text {
            font-weight: 600;
            color: #000;
            font-size: 18px;
            margin-bottom: 2px;
        }

        .user-email {
            color: #6c757d;
            font-size: 16px;
        }

        .user-metadata {
            display: flex;
            gap: 20px;
            align-items: center;
            flex: 2.5;
            min-width: 600px;
