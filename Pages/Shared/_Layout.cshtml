<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>DMC Portal - @ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
            overflow-x: hidden;
        }

        .top-header {
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
            padding: 12px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1040;
            height: 60px;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .header-left h5 {
            margin: 0;
            color: #0d6efd;
        }

        .header-left p {
            margin: 0;
            font-size: 14px;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .notification-icon {
            position: relative;
            color: #6c757d;
            font-size: 18px;
            cursor: pointer;
            padding: 8px;
        }

        .notification-icon:hover {
            color: #0d6efd;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            background-color: #0d6efd;
            color: #fff;
            font-weight: bold;
            font-size: 14px;
            width: 38px;
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            cursor: pointer;
        }

        .user-name {
            font-weight: 600;
            color: #000;
        }

        .main-container {
            display: flex;
            margin-top: 60px;
            min-height: calc(100vh - 60px);
        }

        .sidebar {
            width: 300px;
            background-color: #ffffff;
            border-right: 1px solid #dee2e6;
            padding: 20px;
            transition: transform 0.3s ease;
            position: fixed;
            top: 60px;
            left: 0;
            height: calc(100vh - 60px);
            overflow-y: auto;
            z-index: 1030;
        }

        .sidebar a {
            display: block;
            padding: 12px 15px;
            margin-bottom: 8px;
            color: #000;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

        .sidebar a:hover {
            background-color: #e9ecef;
            color: #0d6efd;
            text-decoration: none;
        }

        .sidebar a.active {
            background-color: #0d6efd;
            color: white;
            font-weight: bold;
        }

        .content-areas {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            margin-left: 300px;
            transition: margin-left 0.3s ease;
            width: calc(100% - 300px);
        }

        .sidebar-toggle {
            display: none;
            background: none;
            border: none;
            color: #0d6efd;
            font-size: 20px;
            cursor: pointer;
            padding: 8px;
        }

        .sidebar-backdrop {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1020;
        }

        /* Responsive breakpoints */
        @@media (max-width: 991.98px) {
            .sidebar {
                transform: translateX(-100%);
            }
            
            .sidebar.show {
                transform: translateX(0);
            }
            
            .content-areas {
                margin-left: 0;
                width: 100%;
            }
            
            .sidebar-toggle {
                display: block;
            }
            
            .sidebar-backdrop.show {
                display: block;
            }
        }

        @@media (max-width: 767.98px) {
            .top-header {
                padding: 8px 15px;
            }
            
            .header-left h5 {
                font-size: 1.1rem;
            }
            
            .header-left p {
                font-size: 12px;
            }
            
            .header-right {
                gap: 10px;
            }
            
            .notification-icon {
                font-size: 16px;
                padding: 6px;
            }
            
            .notification-icon span {
                display: none;
            }
            
            .user-avatar {
                width: 32px;
                height: 32px;
                font-size: 12px;
            }
            
            .content-areas {
                padding: 15px;
            }
            
            .sidebar {
                width: 280px;
                padding: 15px;
            }
        }

        @@media (max-width: 575.98px) {
            .top-header {
                padding: 8px 10px;
            }
            
            .header-left h5 {
                font-size: 1rem;
            }
            
            .header-left p {
                display: none;
            }
            
            .header-right {
                gap: 8px;
            }
            
            .content-areas {
                padding: 10px;
            }

            .sidebar {
                width: 220px;
                min-height: 100vh;
                background-color: #fff;
                position: fixed;
                left: 0;
                top: 50px;
                bottom: 0;
            }

            
            .sidebar a {
                padding: 10px 12px;
                font-size: 14px;
            }
        }

        /* Print styles */
        @@media print {
            .sidebar, .top-header {
                display: none !important;
            }
            
            .content-areas {
                margin-left: 0 !important;
                width: 100% !important;
                padding: 0 !important;
            }
        }
    </style>
</head>
<body>
    @{
        var firstName = User.Claims.FirstOrDefault(c => c.Type == "FirstName")?.Value ?? "User";
        var lastName = User.Claims.FirstOrDefault(c => c.Type == "LastName")?.Value ?? "";
        var initials = (string.IsNullOrEmpty(firstName) ? "" : firstName.Substring(0, 1).ToUpper()) +
        (string.IsNullOrEmpty(lastName) ? "" : lastName.Substring(0, 1).ToUpper());
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
    }

    <div class="top-header">
        <div class="header-left">
            <button class="sidebar-toggle" id="sidebarToggle"><i class="fas fa-bars"></i></button>
            <div>
                <h5><b>DMC Portal</b></h5>
                <p class="text-muted">Travel Management System</p>
            </div>
        </div>
        <div class="header-right">
            <div class="notification-icon"><i class="fas fa-bell"></i><span class="text-muted ms-1">Notifications</span></div>
            <div class="user-info dropdown">
                <div class="user-avatar dropdown-toggle" data-bs-toggle="dropdown">@initials</div>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><span class="dropdown-item-text">@firstName @lastName</span></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-danger" href="javascript:void(0)" id="logoutBtn">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="sidebar-backdrop" id="sidebarBackdrop"></div>

    <div class="main-container">
        <div class="sidebar" id="sidebar">
            <a href="@Url.Action("Index", "Dashboard")" class="@(currentController == "Dashboard" ? "active" : "")"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
            <a href="@Url.Action("Index", "Trip")" class="@(currentController == "Trip" ? "active" : "")"><i class="fas fa-plane me-2"></i>Trip Management</a>
            <a href="@Url.Action("Index", "LeadManagement")" class="@(currentController == "LeadManagement" ? "active" : "")"><i class="fas fa-users me-2"></i>Lead Management</a>
            <a href="@Url.Action("Index", "UserManagement")" class="@(currentController == "UserManagement" ? "active" : "")"><i class="fas fa-user-cog me-2"></i>User Management</a>
            <a href="@Url.Action("Index", "SalesVisit")" class="@(currentController == "SalesVisit" ? "active" : "")"><i class="fas fa-car me-2"></i>Sales Visit</a>
            <a href="@Url.Action("Index", "Master")" class="@(currentController == "Master" ? "active" : "")"><i class="fas fa-folder me-2"></i>Master Pages</a>
        </div>

        <div class="content-areas">@RenderBody()</div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js"></script>

    <script>
        $(document).ready(function () {

            // Sidebar toggle
            $('#sidebarToggle').on('click', function () {
                $('#sidebar').toggleClass('show');
                $('#sidebarBackdrop').toggleClass('show');
            });

            $('#sidebarBackdrop').on('click', function () {
                $('#sidebar').removeClass('show');
                $('#sidebarBackdrop').removeClass('show');
            });

            $('#sidebar a').on('click', function () {
                if ($(window).width() <= 991.98) {
                    $('#sidebar').removeClass('show');
                    $('#sidebarBackdrop').removeClass('show');
                }
            });

            $(window).on('resize', function () {
                if ($(window).width() > 991.98) {
                    $('#sidebar').removeClass('show');
                    $('#sidebarBackdrop').removeClass('show');
                }
            });

        });

        // 🔥 Logout always works, even if page content loads late
        $(document).on('click', '#logoutBtn', function () {
            debugger;
            if (confirm('Are you sure you want to logout?')) {
                sessionStorage.clear();
                localStorage.clear();
                window.location.href = "/Login/Logout";
            }
        });
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>