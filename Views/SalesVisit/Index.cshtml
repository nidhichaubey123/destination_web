                MeetingVenueName: $('[name="MeetingVenueName"]').val(),
                MeetingLatitude: parseFloat($('[name="MeetingLatitude"]').val()),
                MeetingLongitude: parseFloat($('[name="MeetingLongitude"]').val()),
                EntryLatitude: parseFloat($('#entryLat').val()),    // Add this
